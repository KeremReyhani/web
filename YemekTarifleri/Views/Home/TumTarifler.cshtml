@model IEnumerable<Yemektarifleri.Models.YemekTarifleri>

@{
    ViewData["Title"] = "Tarif";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Tüm Tarifler</h3>


<ul>
    @foreach (var item in Model)
    {
        <li>
            <a asp-action="Tarif" asp-route-id="@item.TarifId">
                Edit |

                (@Html.DisplayFor(modelItem => item.Yemekadi) Kategorisi: @Html.DisplayFor(modelItem => item.Kategori.Kategoriadi))
            </a>
        </li>
    }}
</ul>
